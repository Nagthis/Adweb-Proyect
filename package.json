    "test:e2e:ci": "cypress run"
  },
  "dependencies": {
    "bootstrap": "^5.3.1",
    "bootstrap-vue-3": "0.5.1",
    "core-js": "^3.28.0",
    "firebase": "^9.22.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/compiler-sfc": "^3.3.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^7.0.1",
    "cypress": "^12.17.1"
  },
  "eslintConfig": {
